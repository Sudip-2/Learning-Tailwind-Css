  <% if (locals.userFullName) {%>
    <h1>Hey your name has <%= locals.userFullName.length %> number</h1>
  <%  } else { %>
    <h1>Enter Your Name</h1>
    <% } %>
          <form action="/submit" method="POST">
            <input type="text" name="fName" placeholder="First name">
